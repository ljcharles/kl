
{% block body %}

  {% trans_default_domain 'FOSUserBundle' %}

  <div class="container jumbotron connect-form" style="color:black;">
    {% image '@KLRestaurationBundle/Resources/public/img/LogokandL-white.png' %}
      <img id="connect-logo" src="{{ asset_url }}" alt="K & L" style="width: 300px;">
    {% endimage %}

    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
        {{ form_widget(form) }}
        <br><br>
        <div>
            <input type="submit" value="{{ 'profile.edit.submit'|trans }}" />
        </div>
        {{ form_rest(form) }}
    {{ form_end(form) }}

    <br>
    <p>
      <a class="btn btn-add-panier"
        href="{{ path('fos_user_change_password') }}" role="button">
        <i class="fa fa-key"></i>
        Changer mon mot de passe
      </a>
      <a class="btn btn-add-panier"
        href="{{ path('fos_user_profile_show') }}" role="button">
        <i class="fa fa-cog"></i>
        Voir mon profile
      </a>
    </p>
  </div>
{% endblock %}
