{% extends "KLCoreBundle::layout.html.twig" %}

{% block title %}Mon panier - {{ parent() }}{% endblock %}

{% block body %}

  <div class="container jumbotron bg-panier">
    <div class="etapes">
      <h1>
        <span style="color: #ffe13f;">
          <i class="fa fa-shopping-cart"></i>
          Mon panier
