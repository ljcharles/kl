{% extends "KLRestaurationBundle::layout.html.twig" %}

{% block title %}{{ parent()}}{% endblock %}

{% block body %}
<div class="row product">
  <div class="col-lg-3">

    <h1 class="presentation-titre">Nos ingrédients</h1>

    <div class="list-group">
      <a href="{{ path('kl_restauration_ingredient_homepage') }}"
      class="list-group-item">Tous</a>
    </div>
  </div>

  <div class="col-lg-9">
      <div class="row">
        <div class="col-lg-3 col-md-6 mb-4"></div>
        <div class="col-lg-7 col-md-6 mb-4 thumbnail">
          <div class="card-body">
            <h5 class="card-title product-title"> {{ ingredient.nom }} </h5>
            <h5 class="product-price">{{ ingredient.quantite }} </h5>
          </div>
          <div class="card-footer">
            <p>
              <a href="{{ path('kl_restauration_ingredient_edit', {'id': ingredient.id}) }}" class="btn btn-add-panier">
                <i class="fa fa-pencil"></i>
                Modifier cette ingrédient
              </a>
            </p>
            <p>
              <a href="{{ path('kl_restauration_ingredient_delete', {'id': ingredient.id}) }}" class="btn btn-add-panier">
                <i class="fa fa-trash"></i>
                Supprimer cette ingrédient
              </a>
            </p>
          </div>
        </div>
      </div>
  </div>
</div>
{% endblock %}
