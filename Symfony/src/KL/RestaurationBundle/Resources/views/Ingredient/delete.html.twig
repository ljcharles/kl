{% extends "KLCoreBundle::layout.html.twig" %}

{% block title %}Supprimer un ingrédient - {{ parent() }}{% endblock %}

{% block body %}

<div class="jumbotron" style="height: 350px;text-align: center;font-size: 5em;">
  <h2 style="margin-top: 75px;">Supprimer un ingrédient</h2>

  <p>
    Etes-vous certain de vouloir supprimer l'ingrédient "{{ ingredient.nom }}" ?
  </p>

  <form action="{{ path('kl_restauration_ingredient_delete', {'id': ingredient.id}) }}" method="post">
    <a href="{{ path('kl_restauration_ingredient_view', {'id': ingredient.id}) }}" class="btn btn-default">
      <i class="fa fa-undo"></i>
      Voir cette ingrédient
    </a>

    <input type="submit" value="Supprimer" class="btn btn-danger">
    {{ form_rest(form) }}
  </form>
</div>
{% endblock %}
