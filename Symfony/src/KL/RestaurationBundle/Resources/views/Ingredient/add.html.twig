{% extends "KLRestaurationBundle::layout.html.twig" %}

{% block title %}Ajouter un ingrédient - {{ parent() }}{% endblock %}

{% block body %}
<div class="row product">
  <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-3 col-md-6 mb-4"></div>
        {{ form_start(form) }}
        <div class="col-lg-7 col-md-6 mb-4 thumbnail">
          <div class="card-body">
            <div class="product-text form-group input-group">
              <div class="input-group-addon"> Nom </div>
              {{ form_widget(form.nom,{'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="product-text form-group input-group">
              <div class="input-group-addon"> Quantité </div>
              {{ form_widget(form.quantite) }}
            </div>
            <p>
              {{ form_rest(form) }}
            </p>
          </div>
          <div class="card-footer">
            <p>
              {{ form_widget(form.save) }}
              {{ form_end(form) }}
            </p>
          </div>
        </div>
      </div>
  </div>
</div>

{% if form_errors(form) %}
    {% javascripts '@KLRestaurationBundle/Resources/public/js/notice/*' %}
        <script src="{{ asset_url }}"></script>
        <script> flash_notice("{{ form_errors(form) }}","danger"); </script>
    {% endjavascripts %}
{% endif %}

{% endblock %}
