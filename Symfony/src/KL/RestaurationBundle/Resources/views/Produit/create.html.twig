{% extends "KLRestaurationBundle::layout.html.twig" %}

{% block title %}Créer un produit - {{ parent() }}{% endblock %}

{% block body %}
<div class="row product">
  <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-3 col-md-6 mb-4"></div>
        {{ form_start(form) }}
        <div class="col-lg-7 col-md-6 mb-4 thumbnail pad">
          <div class="card-body">
            <div class="product-text form-group">
              <h2>Création {{ typeProduit }}</h2>
              <p>
                <i class="fa fa-plus-circle"></i>
                <em>
                  Cliquer sur les ingrédients que vous souhaiter ajouter
                </em>
              </p>
              <p>Prix de base : {{ price }} €</p>
              <p>Prix total : {{ totalPrice }} €</p>
            </div>
            <div>
                {{ form_widget(form.ingredients, {'attr': {'class': 'TriSea-technologies-Switch pull-right create-ing'}}) }}
            </div>
            <p>
              {{ form_rest(form) }}
            </p>
          </div>
          <div class="card-footer">
            <p>
              {{ form_widget(form.save) }}
              {{ form_end(form) }}
            </p>
          </div>
        </div>
      </div>
  </div>
</div>

{% if form_errors(form) %}
    {% javascripts '@KLRestaurationBundle/Resources/public/js/notice/*' %}
        <script src="{{ asset_url }}"></script>
        <script> flash_notice("{{ form_errors(form) }}","danger"); </script>
    {% endjavascripts %}
{% endif %}
{% endblock %}
