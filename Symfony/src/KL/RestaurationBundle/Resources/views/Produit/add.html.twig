{% extends "KLRestaurationBundle::layout.html.twig" %}

{% block title %}Ajouter un produit - {{ parent() }}{% endblock %}

{% block body %}
<div class="row product">
  <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-3 col-md-6 mb-4"></div>
        {{ form_start(form) }}
        <div class="col-lg-7 col-md-6 mb-4 thumbnail">
          <div class="container-img-product form-group">
            <label for="kl_restaurationbundle_produit_image"
            class="label-file card-img-top product-img"
            id="label-file">
            <i class="fa fa-upload fa-5x" aria-hidden="true"></i>
            </label>
            {{ form_widget(form.image, {'attr': {'class': 'card-img-top product-img'}}) }}
            <p id="no-file">Aucune image sélectionnée</p>
          </div>
          <div class="card-body">
            <div class="card-text product-text form-group input-group">
              <div class="input-group-addon"> Nom </div>
              {{ form_widget(form.nom,{'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="card-text product-text form-group input-group">
              <div class="input-group-addon"> Prix </div>
              {{ form_widget(form.prix) }}
            </div>
            <div class="card-text product-text form-group input-group">
              <div class="input-group-addon"> Description </div>
              {{ form_widget(
                  form.description,
                  {'attr': {'class': 'form-control form-desc tinymce'}}
              )}}
            </div>
            <div class="card-text product-text form-group input-group">
              <div class="input-group-addon"> Catégorie </div>
              {{ form_widget(form.gammeProduit,{'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="card-text product-text form-group">
              Ingrédients
            </div>
            <div>
                {{ form_widget(form.ingredients) }}
            </div>
            <div class="card-text product-text form-group input-group">
              <div class="input-group-addon"> Note </div>
              {{ form_widget(form.note,{'attr': {'class': 'form-control'}}) }}
            </div>
            <p>
              {{ form_rest(form) }}
            </p>
          </div>
          <div class="card-footer">
            <p>
              {{ form_widget(form.save) }}
              {{ form_end(form) }}
            </p>
          </div>
        </div>
      </div>
  </div>
</div>

{% if form_errors(form) %}
    {% javascripts '@KLRestaurationBundle/Resources/public/js/notice/*' %}
        <script src="{{ asset_url }}"></script>
        <script> flash_notice("{{ form_errors(form) }}","danger"); </script>
    {% endjavascripts %}
{% endif %}
{% endblock %}
