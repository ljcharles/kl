{% extends "KLCoreBundle::layout.html.twig" %}

{% block title %}Supprimer un produit - {{ parent() }}{% endblock %}

{% block body %}

<div class="jumbotron" style="height: 350px;text-align: center;font-size: 5em;">
  <h2 style="margin-top: 75px;">Supprimer un produit</h2>

  <p>
    Etes-vous certain de vouloir supprimer le produit "{{ produit.nom }}" ?
  </p>

  <form action="{{ path('kl_restauration_produit_delete', {'id': produit.id}) }}" method="post">
    <a href="{{ path('kl_restauration_produit_view', {'id': produit.id}) }}" class="btn btn-default">
      <i class="fa fa-undo"></i>
      Retour au produit
    </a>

    <input type="submit" value="Supprimer" class="btn btn-danger">
    {{ form_rest(form) }}
  </form>
</div>
{% endblock %}
